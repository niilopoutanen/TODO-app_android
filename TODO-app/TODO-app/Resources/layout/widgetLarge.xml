<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/widgetBGLarge"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:background="@drawable/rounded90px"
        android:backgroundTint="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/widgetLargeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/textPrimary"/>

        <RelativeLayout
            android:id="@+id/widgetLargeElement1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded50px"
            android:backgroundTint="@color/colorButton"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/widgetLargeTask1"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/textPrimary"/>
            <TextView
                android:id="@+id/widgetLargeTask1Due"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/textPrimary"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/widgetLargeElement2"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded50px"
            android:backgroundTint="@color/colorButton"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/widgetLargeTask2"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/textPrimary"/>
            <TextView
                android:id="@+id/widgetLargeTask2Due"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/textPrimary"/>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/widgetLargeElement3"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded50px"
            android:backgroundTint="@color/colorButton"
            android:gravity="center_vertical"
            android:padding="10dp">

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

