<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bottomrounded">
        <RelativeLayout
            android:id="@+id/SettingsReturn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:padding="17dp">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:contentDescription="@string/default_description" />
        </RelativeLayout>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="25dp"
            android:fontFamily="@font/inter_bold"/>
    </RelativeLayout>
    <ScrollView
        android:scrollbars="none"
        android:visibility="visible"
        android:id="@+id/SettingsScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded50px"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vibrationSettings"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"/>
                <Switch
                    android:checked="true"
                    android:id="@+id/vibrationSwitch"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/toggle_thumb"
                    android:track="@drawable/toggle_track"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded50px"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notificationSettings"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"/>
                <Switch
                    android:checked="true"
                    android:id="@+id/notificationsSwitch"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/toggle_thumb"
                    android:track="@drawable/toggle_track"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/themePanel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded50px"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/theme"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"/>

                <Spinner
                    android:id="@+id/themeSelector"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:minWidth="80dp"
                    android:popupBackground="@drawable/spinnerbg"
                    android:background="@drawable/rounded50px"
                    android:textAlignment="center"
                    android:backgroundTint="@color/colorButton"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/colorSelector"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/rounded50px"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colorTheme"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/MainBlueToggle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/mainBlue"
                        android:gravity="center">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/MainBlueActive"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/circle"
                            android:tint="#0043BA"
                            android:contentDescription="@string/default_description" />
                    </RelativeLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:id="@+id/MainGreenToggle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/mainGreen"
                        android:gravity="center">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/MainGreenActive"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/circle"
                            android:tint="#0C8600"
                            android:contentDescription="@string/default_description" />
                    </RelativeLayout>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:id="@+id/MainVioletToggle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/mainViolet"
                        android:gravity="center">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/MainVioletActive"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/circle"
                            android:tint="#7000A8"
                            android:contentDescription="@string/default_description" />
                    </RelativeLayout>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:id="@+id/MainOrangeToggle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/mainOrange"
                        android:gravity="center">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/MainOrangeActive"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/circle"
                            android:tint="#8C4E00"
                            android:contentDescription="@string/default_description" />
                    </RelativeLayout>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:id="@+id/MainRedToggle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/mainRed"
                        android:gravity="center">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/MainRedActive"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/circle"
                            android:tint="#A80F00"
                            android:contentDescription="@string/default_description" />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded50px"
                android:paddingLeft="25dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deleteAllDone"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"/>
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="100dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/deleteAllDoneButton"
                    android:paddingRight="20dp">
                    <Button
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:background="@drawable/arrow"
                        android:backgroundTint="@color/textPrimary"
                        android:rotation="180"
                    />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded50px"
                android:paddingLeft="25dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deleteAll"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"/>
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="100dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/deleteAllButton"
                    android:paddingRight="20dp">
                    <Button
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:background="@drawable/arrow"
                        android:backgroundTint="@color/textPrimary"
                        android:rotation="180"
                    />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/SendFeedbackBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded50px"
                android:paddingLeft="25dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sendFeedback"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"/>
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="100dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/SendFeedbackBtn"
                    android:paddingRight="20dp">
                    <Button
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:background="@drawable/arrow"
                        android:backgroundTint="@color/textPrimary"
                        android:rotation="180"
                    />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ReplayTutorialbtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded50px"
                android:paddingLeft="25dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/replayTutorial"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"/>
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="100dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/SendFeedbackBtn"
                    android:paddingRight="20dp">
                    <Button
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:background="@drawable/arrow"
                        android:backgroundTint="@color/textPrimary"
                        android:rotation="180"
                    />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded50px"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/versionHeader"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"/>
                <TextView
                    android:id="@+id/VersionText"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="20dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/rounded50px"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/CreditsHeader"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/CreditsHeader"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/CreditsNP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Credits1"
                    android:layout_below="@+id/CreditsHeader"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_bold"/>
                <TextView
                    android:id="@+id/CreditsOM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Credits2"
                    android:layout_below="@+id/CreditsNP"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_bold"/>
                <TextView
                    android:id="@+id/CreditsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Credits3"
                    android:layout_below="@+id/CreditsOM"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_bold"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
