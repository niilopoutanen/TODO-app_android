<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's new"
                android:fontFamily="@font/inter_bold"
                android:textSize="30dp"
                android:layout_marginBottom="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded90px"
                android:backgroundTint="@color/colorPrimaryDark"
                android:padding="15dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:id="@+id/version1.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.7"
                    android:textSize="22dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/2022"
                    android:textSize="22dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/header1.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header1.7"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_below="@+id/version1.7"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header1.7"
                    android:textSize="13dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/desc1.7"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded90px"
                android:backgroundTint="@color/colorPrimaryDark"
                android:padding="15dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:id="@+id/version1.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.6"
                    android:textSize="22dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/2022"
                    android:textSize="22dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/header1.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header1.6"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_below="@+id/version1.6"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/desc1.6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header1.6"
                    android:textSize="13dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/desc1.6"/>
                <ImageView
                    android:contentDescription="@string/default_description"
                    android:layout_below="@+id/desc1.6"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:src="@drawable/widgets"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded90px"
                android:backgroundTint="@color/colorPrimaryDark"
                android:padding="15dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:id="@+id/version1.5.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5.5"
                    android:textSize="22dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9/2022"
                    android:textSize="22dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/header1.5.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header1.5.5"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_below="@+id/version1.5.5"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/desc1.5.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header1.5.5"
                    android:textSize="13dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/desc1.5.5"/>
                <ImageView
                    android:contentDescription="@string/default_description"
                    android:layout_below="@+id/desc1.5.5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/flags"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded90px"
                android:backgroundTint="@color/colorPrimaryDark"
                android:padding="15dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:id="@+id/version1.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5"
                    android:textSize="22dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9/2022"
                    android:textSize="22dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/header1.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header1.5"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_below="@+id/version1.5"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/desc1.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header1.5"
                    android:textSize="13dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/desc1.5"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded90px"
                android:backgroundTint="@color/colorPrimaryDark"
                android:padding="15dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:id="@+id/version1.4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.4"
                    android:textSize="22dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9/2022"
                    android:textSize="22dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/header1.4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header1.4"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_below="@+id/version1.4"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/desc1.4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header1.4"
                    android:textSize="13dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/desc1.4"/>
                <ImageView
                    android:contentDescription="@string/default_description"
                    android:layout_below="@+id/desc1.4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/firebaseimg"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
