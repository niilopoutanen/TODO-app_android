<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's new"
                android:fontFamily="@font/inter_bold"
                android:textSize="30dp"
                android:layout_marginBottom="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/rounded90px"
                android:backgroundTint="@color/colorPrimaryDark"
                android:padding="15dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:id="@+id/version1.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.7"
                    android:textSize="18dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/2022"
                    android:textSize="18dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/header1.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification update"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_below="@+id/version1.7"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header1.7"
                    android:textSize="13dp"
                    android:layout_marginBottom="10dp"
                    android:text="Notifications are now supported! You can customize the time for the reminder from settings, and also toggle notifications off if you donâ€™t want them."/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded90px"
                android:backgroundTint="@color/colorPrimaryDark"
                android:padding="15dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:id="@+id/version1.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.6"
                    android:textSize="18dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/2022"
                    android:textSize="18dp"
                    android:fontFamily="@font/inter_bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/header1.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Widget update"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_below="@+id/version1.6"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/desc1.6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header1.6"
                    android:textSize="13dp"
                    android:layout_marginBottom="10dp"
                    android:text="Added 3 new widgets to the app. Also added support for Material You theme as shown in the image."/>
                <ImageView
                    android:contentDescription="@string/default_description"
                    android:layout_below="@+id/desc1.6"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:src="@drawable/widgets"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
