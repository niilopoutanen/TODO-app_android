<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    android:background="@drawable/rounded90px"
    android:gravity="center_horizontal"
    android:padding="15dp">

    <TextView
        android:textAlignment="center"
        android:id="@+id/PopupHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="header"
        android:textSize="25dp"
        android:fontFamily="@font/inter_bold"/>
    <TextView
        android:id="@+id/PopupDescription"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        android:layout_below="@+id/PopupHeader"
        android:fontFamily="@font/inter_medium"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
        <Button
            android:id="@+id/PopupConfirm"
            android:layout_alignParentRight="true"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded60px"
            android:backgroundTint="?attr/colorAccent"
            android:text="@string/yes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_bold"/>

        <Button
            android:id="@+id/PopupCancel"
            android:layout_alignParentLeft="true"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="@string/no"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_bold"/>
    </RelativeLayout>

</LinearLayout>
