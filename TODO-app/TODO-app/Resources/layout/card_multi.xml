<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/taskBg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded90px"
    android:backgroundTint="@color/colorPrimaryDark"
    android:minHeight="80dp"
    android:padding="20dp"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_centerVertical=""
            android:id="@+id/taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ensimmäinen tehtävä"
            android:textSize="19dp"
            android:fontFamily="@font/inter_bold"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70%"
            android:textSize="19dp"
            android:fontFamily="@font/inter_bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@drawable/taskgradient"
        android:backgroundTint="@color/colorButton">
        <ImageView
            android:contentDescription="@string/default_description"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:src="@drawable/taskgradient"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:visibility="hgo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tehdyt kerrat:"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/inter_bold"/>
        <RelativeLayout
            android:id="@+id/timesDoneLess"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle">
            <ImageView
                android:contentDescription="@string/default_description"
                android:layout_centerInParent="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/minus"/>
        </RelativeLayout>
        <EditText
            android:textAlignment="center"
            android:inputType="number"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="18dp"
            android:fontFamily="@font/inter_bold"
            android:background="@android:color/transparent"
            android:textColor="@color/textPrimary"/>
        <RelativeLayout
            android:id="@+id/timesDoneMore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle">
            <ImageView
                android:contentDescription="@string/default_description"
                android:layout_centerInParent="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/plus"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
