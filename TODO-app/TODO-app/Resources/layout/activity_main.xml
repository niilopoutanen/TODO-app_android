<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:animateLayoutChanges="true">
    <LinearLayout
        android:layout_weight="0"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomrounded"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/Header">
        <LinearLayout
            android:visibility="visible"
            android:animateLayoutChanges="true"
            android:id="@+id/mainHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/NavBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/SettingsButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded10px"
                    android:padding="7dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/settingsvector"
                        android:contentDescription="@string/default_description" />
                </RelativeLayout>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Button
                    android:visibility="visible"
                    android:paddingLeft="15dp"
                    android:id="@+id/SearchBar"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded10px"
                    android:text="@string/search"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/textSecondary"
                    android:fontFamily="@font/inter_semibold"/>
                <EditText
                    android:visibility="gone"
                    android:id="@+id/SearchField"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/rounded10px"
                    android:textColor="@color/white"
                    android:inputType="text" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/ShowAll"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded10px"
                    android:text="@string/show_all"
                    android:textAllCaps="false"
                    android:textColor="@color/textSecondary"
                    android:fontFamily="@font/inter_semibold"/>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/MainInfo"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/todayHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_bold"/>
                <Button
                    android:id="@+id/CreateTask"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:background="@drawable/rounded50px"
                    android:backgroundTint="?attr/colorAccent"
                    android:text="@string/plus"
                    android:textSize="30dp"
                    android:fontFamily="@font/inter_bold"/>
            </RelativeLayout>
            <HorizontalScrollView
                android:visibility="visible"
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:overScrollMode="never"
                android:scrollbars="none">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/missedTasksBtn"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/colorButton">

                        <TextView
                            android:id="@+id/missedTasksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inter_bold"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/alarm"
                            android:contentDescription="@string/default_description"/>
                    </RelativeLayout>

                    <Space
                        android:visibility="gone"
                        android:id="@+id/missedTasksSpace"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/date1btn"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="?attr/colorAccent">
                        <TextView
                            android:id="@+id/date1number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:fontFamily="@font/inter_bold"/>
                        <TextView
                            android:id="@+id/date1str"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:fontFamily="@font/inter_bold"/>

                    </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/date2btn"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/colorButton">
                        <TextView
                            android:id="@+id/date2number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:fontFamily="@font/inter_bold"/>
                        <TextView
                            android:id="@+id/date2str"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:fontFamily="@font/inter_bold"/>

                    </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/date3btn"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/colorButton">
                        <TextView
                            android:id="@+id/date3number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:fontFamily="@font/inter_bold"/>
                        <TextView
                            android:id="@+id/date3str"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:fontFamily="@font/inter_bold"/>

                    </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/date4btn"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/colorButton">
                        <TextView
                            android:id="@+id/date4number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:fontFamily="@font/inter_bold"/>
                        <TextView
                            android:id="@+id/date4str"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:fontFamily="@font/inter_bold"/>

                    </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/date5btn"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/colorButton">
                        <TextView
                            android:id="@+id/date5number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:fontFamily="@font/inter_bold"/>
                        <TextView
                            android:id="@+id/date5str"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:fontFamily="@font/inter_bold"/>

                    </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:id="@+id/date6btn"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/colorButton">
                        <TextView
                            android:id="@+id/date6number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:fontFamily="@font/inter_bold"/>
                        <TextView
                            android:id="@+id/date6str"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:fontFamily="@font/inter_bold"/>

                    </RelativeLayout>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/date7btn"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:gravity="center_horizontal"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/calendar_item"
                        android:backgroundTint="@color/colorButton">
                        <TextView
                            android:id="@+id/date7number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:fontFamily="@font/inter_bold"/>
                        <TextView
                            android:id="@+id/date7str"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:fontFamily="@font/inter_bold"/>

                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/CreateTaskHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_task_header"
                android:textSize="20dp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_name_header"
                android:textSize="15dp"/>
            <EditText
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/TaskNameField"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="text"
                android:background="@drawable/rounded50px"
                android:backgroundTint="@color/colorButton"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_select_header"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/DayArrowUp"
                        android:clickable="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal">
                        <Button
                            android:clickable="false"
                            android:layout_alignParentTop="true"
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:background="@drawable/arrow"
                            android:rotation="90"
                                />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/DayInput"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded50px"
                        android:backgroundTint="@color/colorButton"
                        android:inputType="date"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:id="@+id/DayArrowDown"
                        android:clickable="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal">
                        <Button
                            android:clickable="false"
                            android:layout_alignParentTop="true"
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:background="@drawable/arrow"
                            android:rotation="-90"
                                />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/MonthArrowUp"
                        android:clickable="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal">
                        <Button
                            android:clickable="false"
                            android:layout_alignParentTop="true"
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:background="@drawable/arrow"
                            android:rotation="90"
                                />
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/MonthInput"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded50px"
                        android:backgroundTint="@color/colorButton"
                        android:inputType="date"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:id="@+id/MonthArrowDown"
                        android:clickable="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal">
                        <Button
                            android:clickable="false"
                            android:layout_alignParentTop="true"
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:background="@drawable/arrow"
                            android:rotation="-90"
                                />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/YearArrowUp"
                        android:clickable="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal">
                        <Button
                            android:clickable="false"
                            android:layout_alignParentTop="true"
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:background="@drawable/arrow"
                            android:rotation="90"
                                />
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/YearInput"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded50px"
                        android:backgroundTint="@color/colorButton"
                        android:inputType="date"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:id="@+id/YearArrowDown"
                        android:clickable="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal">
                        <Button
                            android:clickable="false"
                            android:layout_alignParentTop="true"
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:background="@drawable/arrow"
                            android:rotation="-90"
                                />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded50px"
                android:backgroundTint="?attr/colorAccent"
                android:id="@+id/AddTask"
                android:text="@string/add"
                android:textSize="18dp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="visible"
        android:id="@+id/taskCountLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <Button
            android:visibility="gone"
            android:id="@+id/SortByCreationDate"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded50px"
            android:text="@string/CreationDate"
            android:textAllCaps="false"
            android:layout_marginRight="10dp"/>
        <Button
            android:visibility="gone"
            android:id="@+id/SortByDueDate"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded50px"
            android:text="@string/DueDate"
            android:textAllCaps="false"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/taskCountText"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded50px"
            android:text="@string/taskAmount"
            android:textAllCaps="false"/>

    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/BackToMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ScrollView
        android:id="@+id/scrollBase"
        android:layout_weight="100"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ScrollLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>


</LinearLayout>
   
