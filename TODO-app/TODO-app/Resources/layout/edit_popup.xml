<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="310dp"
    android:background="@drawable/rounded90px"
    android:backgroundTint="@color/popupBG"
    android:gravity="center_horizontal"
    android:padding="15dp">

    <TextView
        android:textAlignment="center"
        android:id="@+id/PopupHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_task_header"
        android:textSize="25dp"
        android:fontFamily="@font/inter_bold"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/EditTaskName"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_name_header"
        android:layout_below="@+id/PopupHeader"
        android:fontFamily="@font/inter_medium"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:paddingLeft="5dp"
        android:id="@+id/EditTaskInput"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded10px"
        android:backgroundTint="@color/colorButton"
        android:layout_below="@+id/EditTaskName"
        android:inputType="text"
        android:textColor="@color/textPrimary"
        />
    <TextView
        android:id="@+id/invalidEditName"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/EditTaskInput"
        android:textSize="12dp"
        android:textColor="@color/errorColor"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/EditDateHeader"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_select_header"
        android:layout_below="@+id/invalidEditName"
        android:fontFamily="@font/inter_medium"/>

    <LinearLayout
        android:id="@+id/dateSelectorEdit"
        android:layout_below="@+id/EditDateHeader"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
>
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/EditDayArrowUp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal">
                <Button
                    android:clickable="false"
                    android:layout_alignParentTop="true"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow"
                    android:rotation="90"
                        />
            </RelativeLayout>

            <EditText
                android:id="@+id/EditDayInput"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded10px"
                android:backgroundTint="@color/colorButton"
                android:inputType="date"
                android:textAlignment="center"
                android:textColor="@color/white"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/EditDayArrowDown"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal">
                <Button
                    android:clickable="false"
                    android:layout_alignParentTop="true"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow"
                    android:rotation="-90"
                        />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/EditMonthArrowUp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal">
                <Button
                    android:clickable="false"
                    android:layout_alignParentTop="true"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow"
                    android:rotation="90"
                        />
            </RelativeLayout>
            <EditText
                android:id="@+id/EditMonthInput"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded10px"
                android:inputType="date"
                android:backgroundTint="@color/colorButton"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/EditMonthArrowDown"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal">
                <Button
                    android:clickable="false"
                    android:layout_alignParentTop="true"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow"
                    android:rotation="-90"
                        />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/EditYearArrowUp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal">
                <Button
                    android:clickable="false"
                    android:layout_alignParentTop="true"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow"
                    android:rotation="90"
                        />
            </RelativeLayout>
            <EditText
                android:id="@+id/EditYearInput"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded10px"
                android:backgroundTint="@color/colorButton"
                android:inputType="date"
                android:textAlignment="center"
                android:textColor="@color/white"
/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/EditYearArrowDown"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal">
                <Button
                    android:clickable="false"
                    android:layout_alignParentTop="true"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow"
                    android:rotation="-90"
                        />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/invalidEditDate"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/dateSelectorEdit"
        android:textSize="12dp"
        android:textColor="@color/errorColor"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/editPopupConfirm"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded60px"
        android:backgroundTint="?attr/colorAccent"
        android:text="@string/yes"
        android:textAllCaps="false"
        android:fontFamily="@font/inter_bold"/>

    <Button
        android:id="@+id/editPopupCancel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:fontFamily="@font/inter_bold"/>
</RelativeLayout>
